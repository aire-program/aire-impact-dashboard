{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "event_id": {
            "type": "string"
        },
        "person_id": {
            "type": "string"
        },
        "department_id": {
            "type": "string"
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "tool_category": {
            "type": "string",
            "enum": [
                "llm_assistant",
                "automated_feedback",
                "grading_helper",
                "data_analysis",
                "content_generation"
            ]
        },
        "context": {
            "type": "string",
            "enum": [
                "course_design",
                "assessment",
                "research",
                "administration"
            ]
        },
        "intensity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10
        },
        "risk_flag": {
            "type": "boolean"
        }
    },
    "required": [
        "event_id",
        "person_id",
        "department_id",
        "date",
        "tool_category",
        "context",
        "intensity",
        "risk_flag"
    ]
}