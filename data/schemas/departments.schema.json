{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "department_id": { "type": "string" },
    "department_name": { "type": "string" },
    "division": { "type": "string" },
    "size_band": { "type": "string", "enum": ["small", "medium", "large"] },
    "baseline_ai_readiness": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
  },
  "required": ["department_id", "department_name", "division", "size_band", "baseline_ai_readiness"]
}
