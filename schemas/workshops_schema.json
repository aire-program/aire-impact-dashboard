{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workshops Schema",
  "type": "object",
  "properties": {
    "workshop_id": { "type": "string" },
    "date": { "type": "string", "format": "date" },
    "title": { "type": "string" },
    "format": { "type": "string", "enum": ["workshop", "micro-course", "webinar", "institute"] },
    "audience": { "type": "string", "enum": ["faculty", "staff", "graduate students", "mixed"] },
    "department_id": { "type": "string" },
    "registrations": { "type": "integer", "minimum": 0 },
    "attendances": { "type": "integer", "minimum": 0 },
    "completion_rate": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": [
    "workshop_id",
    "date",
    "title",
    "format",
    "audience",
    "department_id",
    "registrations",
    "attendances",
    "completion_rate"
  ],
  "additionalProperties": false
}
